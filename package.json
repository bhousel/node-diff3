{
  "name": "node-diff3",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "bhousel/node-diff3",
  "author": "Bryan Housel <bryan@mapbox.com>",
  "description": "A node.js module for text diffing and three-way-merge.",
  "keywords": [
    "diff",
    "diff3",
    "merge"
  ],
  "main": "index.js",
  "module": "index.mjs",
  "dependencies": {},
  "devDependencies": {
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "rollup": "^1.12.3",
    "tap": "^14.1.7"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "rollup -f umd -n Diff3 index.mjs --no-indent --no-strict -o index.js",
    "lint": "eslint index.mjs test/*.js",
    "test": "npm run lint && npm run build && tap --cov test/*.js"
  }
}
